.row-fluid
  .span6#main-tabs-section
    %ul.nav.nav-tabs
      %li.active
        = link_to 'Tweets favoritos', '#tweets'
      %li
        = link_to 'Webs enlazadas', '#webs'
      %li#content-tab
        = link_to 'Contenido interesante', '#content'

    .tab-content
      #tweets.tab-pane.active
        %ul
          -@tweets.each do |tweet|
            %li
              = render partial: 'layouts/tweet', locals: {tweet: tweet}
              %hr
      #webs.tab-pane
        %ul
          -@webs.each do |web|
            %li
              .row-fluid
                .span8.link= link_to web.link, 'javascript:void(0)'
                .span4.toggle-display-tweet= link_to 'ver tweet', 'javascript:void(0)'
              = render partial: 'layouts/tweet', locals: {tweet: web.tweet}
      #content.tab-pane
        = link_to 'Añadir nuevo contenido', 'javascript:void(0)'
        #new-content
          = simple_form_for(@content) do |f|
            = f.error_notification

            .form-inputs
              = f.input :title
              = f.input :text

            .form-actions
              = f.button :submit

        %ul#contents-list
          -@contents.each do |content|
            %li
              %h4= content.title
              %p.hidden= content.text

  .span6
    #iframe-container
      = link_to 'ver página en una ventana independiente', 'javascript:void(0)', target: '_blank'
    #content-container
      %h2
      %p
